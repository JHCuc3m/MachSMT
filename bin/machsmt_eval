#!/usr/bin/env python3
import sys
import traceback
import pdb
import cProfile
from machsmt import MachSMT, warning, die, DataBase, config, Evaluator


def main():
    pdb.set_trace()
    if config.files:
        mach = MachSMT(config.files)
    else:
        mach = MachSMT.load(config.lib)
    Evaluator(mach.db).run()
    pdb.set_trace()

if __name__ == '__main__':
    try:
        if config.profile:
            cProfile.run('main()', sort=2)
        else:
            main()
    except BaseException:
        extype, value, tb = sys.exc_info()
        traceback.print_exc()
        if config.debug:
            pdb.post_mortem(tb)
